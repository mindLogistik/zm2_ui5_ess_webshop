{
  "name": "diehlwebshop",
  "version": "0.0.1",
  "description": "Webshop Template",
  "main": "webapp/index.html",
  
  "scripts": {
    "start": "ui5 serve --open \"index.html?sap-ui-xx-viewCache=false#/\"",
    "start-flp": "ui5 serve --open \"test/flpSandbox.html?sap-ui-xx-viewCache=false#webshop-display\"",
    "start-mock": "ui5 serve --config ui5-mock.yaml --open \"index.html?sap-ui-xx-viewCache=false#/\"",
    "start-mock-flp": "ui5 serve --config ui5-mock.yaml --open \"test/flpSandbox.html?sap-ui-xx-viewCache=false#webshop-display\"",
    "start-checkout": "ui5 serve --config ui5-mock.yaml --open \"index.html?sap-ui-xx-viewCache=false#/checkoutWizard\"",
    "build": "ui5 build --config=ui5.yaml --clean-dest --dest dist",
    "deploy": "npm run build && fiori deploy --config ui5-deploy.yaml",
    "deploy-config": "fiori add deploy-config",
    "unit-test": "ui5 serve --open \"test/unit/unitTests.qunit.html\"",
    "int-test": "ui5 serve --open \"test/integration/opaTests.qunit.html\"",
    "undeploy": "npm run build && fiori undeploy --config ui5-deploy.yaml",
    "deploy-test": "npm run build && fiori deploy --config ui5-deploy.yaml --testMode true"
  },
  "devDependencies": {
    "@ui5/cli": "^4.0.33",
    "@sap/ux-ui5-tooling": "1",
    "@sap-ux/ui5-middleware-fe-mockserver": "2",
    "rimraf": "^5.0.5"
  }

,
  "sapuxLayer": "CUSTOMER_BASE"
}
